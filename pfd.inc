stock GeneratePFDStrings(
    Float:distance, // nm
    Float:bearing,  // degrees
    Float:altitude, // feet
    bool:autopilot,
    bool:glideslope,
    bool:localiser,
    bool:heading,

    string1[64],
    string2[32],
    string3[7],
    string4[7],
    string5[16]
) {
    format(string1, sizeof string1,
        "~w~DIS ~y~%.1fNM ~w~BRG ~y~%.0f",
        distance, bearing
    );

    format(string2, sizeof string2,
        "~w~ALT ~y~%.0fFT",
        altitude
    );

    format(string3, sizeof string3,
        "%s",
        glideslope ? ("~g~GS") : ("_")
    );

    format(string4, sizeof string4,
        "%s",
        autopilot ? ("~y~AP") : ("_")
    );

    format(string5, sizeof string5,
        "%s ~g~%s",
        localiser ? ("~g~LOC") : ("____"),
        heading ? ("~g~HEA") : ("_")
    );
}